{
	"$schema": "http://json-schema.org/draft-07/schema",
	"properties": {
		"appServiceType": {
			"type": "string"
		},
		"app": {
			"useLoadBalancers": {
				"type": "boolean"
			},
			"image": {
				"properties": {
					"repository": {
						"type": "string"
					},
					"tag": {
						"type": "string"
					},
					"pullPolicy": {
						"type": "string"
					}
				}
            }	
		},
        "conjur": {
            "authnConfigMap":{
                "properties": {
                    "create": {
                        "type": "boolean"
                    },
                    "name": {
                        "type": "string"
                    },
                    "authnLogin": {
                            "type": "string"
                    }
                }
            }
		},
		"authnClient": {
			"image": {
				"properties": {
					"repository": {
						"type": "string"
					},
					"tag": {
						"type": "string"
					},
					"pullPolicy": {
						"type": "string"
					}
				}
			}
		},
        "secretsProvider": {
			"image": {
				"properties": {
					"repository": {
						"type": "string"
					},
					"tag": {
						"type": "string"
					},
					"pullPolicy": {
						"type": "string"
					}
				}
			}
		},
		"conjurConnConfigMap": {
			"name": {
				"type": "string",
				"maxLength": 252,
				"pattern": "[a-z0-9]([-a-z0-9]*[a-z0-9])?"
			}
		}
	}
}
